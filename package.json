{
	"name": "meguro-nextjs",
	"version": "0.4.1",
	"description": "Portfolio site using Next.js",
	"author": "Alvaro Garcia",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "npm run dev",
		"build": "npm run clean && npm run test && next build",
		"build:demo": "npm run clean && npm run test && env USE_DEMO=yes npm run build",
		"clean": "npm run clean:next & npm run clean:out",
		"clean:next": "rm -rf .next",
		"clean:out": "rm -rf out",
		"export": "npm run build && next export",
		"export:demo": "npm run build:demo && env USE_DEMO=yes next export",
		"dev": "next dev",
		"dev:demo": "env USE_DEMO=yes next dev",
		"serve": "next start",
		"serve:static": "node scripts/server-static.js",
		"test": "npm run test:types && npm run test:lint && npm run test:prettier",
		"test:lint": "eslint \"**/*.{js,ts,tsx}\"",
		"test:prettier": "prettier --check \"**/*.{js,ts,tsx,json}\"",
		"test:types": "tsc",
		"test:unit": "jest",
		"test:unit:watch": "jest --watch",
		"format:prettier": "prettier --write \"**/*.{js,ts,tsx,json}\"",
		"format:stylus": "stylus-supremacy format **/*.styl --options stylusrc.json --replace",
		"deploy": "npm run export:demo && touch out/.nojekyll && gh-pages --dotfiles -d out"
	},
	"dependencies": {
		"@mdx-js/loader": "^1.6.22",
		"@mdx-js/react": "^1.6.22",
		"@types/jest": "^26.0.22",
		"@types/lodash.throttle": "^4.1.6",
		"@types/mdx-js__react": "^1.5.3",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@zeit/next-stylus": "^1.0.1",
		"babel-loader": "^8.2.2",
		"express": "^4.17.1",
		"file-loader": "^6.2.0",
		"glob": "^7.1.6",
		"gray-matter": "^4.0.2",
		"jest": "^26.6.3",
		"lodash.throttle": "^4.1.1",
		"next": "^10.1.3",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-scrollbars-custom": "^4.0.25",
		"remark-unwrap-images": "^2.0.0",
		"responsive-loader": "^2.3.0",
		"sharp": "^0.28.0",
		"stylus": "^0.54.8",
		"typescript": "^4.2.3"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.23.1",
		"eslint-plugin-react-hooks": "^4.2.0",
		"gh-pages": "^3.1.0",
		"prettier": "^2.2.1",
		"stylus-supremacy": "^2.15.0"
	}
}
