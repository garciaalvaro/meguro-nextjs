/**
 * Modal
 */

.container
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 100
	background #111314
	padding 6rem 1rem
	display flex
	justify-content center

	@media screen and (max-height: 600px)
		padding 2rem 1rem

.image
	object-fit contain
	max-width 100rem
	max-height 100%

	&.direction_left
		animation appear_from_left .6s var(--ease_deceleration)

	&.direction_right
		animation appear_from_right .6s var(--ease_deceleration)

@keyframes appear_from_left

	0%
		transform translate3d(-.2rem,0,0)

	100%
		transform translate3d(0,0,0)

@keyframes appear_from_right

	0%
		transform translate3d(.2rem,0,0)

	100%
		transform translate3d(0,0,0)
