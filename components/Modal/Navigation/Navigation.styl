.container
	position absolute
	top 0
	right 0
	display flex
	background-color rgba(255, 255, 255, .95)
	z-index 1

.button
	display flex
	justify-content center
	align-items center
	width 6rem
	height 6rem
	border none
	background none
	color rgba(0, 0, 0, .7)
	cursor pointer
	transition background-color .1s var(--ease_deceleration)

	&
	&:hover
	&:focus
		outline none

	&:hover
		background-color #fff
		transition-delay .05s

	svg
		fill currentColor
