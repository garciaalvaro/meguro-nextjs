/**
 * List
 */

.container
	list-style none

	body ul&
		padding-left 0

	.link
		display block
		font-style inherit
		width 100%

		&:before
			content normal

.image_container
	position relative
	width 100%
	height 0
	padding-bottom 100%

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	object-fit cover
