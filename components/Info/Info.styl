/**
 * Info
 */

.container

	ul
		display block
		list-style none
		margin 0
		padding 0

	li
		display inline

	li:after
		content ""
		padding 0 .5em

	&.li_separator-7C

		li:after
			content "\7C" // |

	&.li_separator-2D

		li:after
			content "\2D" // -

	li:last-child:after
		content normal
