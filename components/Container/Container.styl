/**
 * Container
 */

.container

	h1

		a
			font-style inherit

		a:before
			content normal

		+ h3
			margin-top 0

	hr
		border none
		border-top .1rem solid
		opacity .2

	a
		position relative
		display inline-block
		font-style italic
		text-decoration none

		&
		&:visited
		&:focus
		&:hover
			color inherit

		&:before
			content ""
			position absolute
			bottom .2em
			left 0
			width 100%
			height 4px
			background-color var(--color)
			transition transform .15s var(--ease_deceleration)
			transform-origin bottom
			transform scaleY(.5) translateZ(0)

		&:hover:before
			transform scaleY(1) translateZ(0)

.type-info

	ul
		display flex
		flex-wrap wrap

	li:after
		content ""
		padding 0 .5em

	&.li_separator-7C

		li:after
			content "\7C" // |

	&.li_separator-2D

		li:after
			content "\2D" // -

	li:last-child:after
		content normal

.type-column
	overflow-y auto
	flex-grow 1
	flex-basis 100%
