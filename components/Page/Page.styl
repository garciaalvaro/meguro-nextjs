/**
 * Page
 */

.container
	padding-top 3rem

	p + p
		margin-top 2em

	a
		position relative
		display inline-block
		font-style italic
		text-decoration none

		&
		&:visited
		&:focus
		&:hover
			color inherit

		&:before
			content ""
			position absolute
			bottom .2em
			left 0
			width 100%
			height 4px
			background-color var(--color)
			transition transform .15s var(--ease_deceleration)
			transform-origin bottom
			transform scaleY(.5) translateZ(0)

		&:hover:before
			transform scaleY(1) translateZ(0)
