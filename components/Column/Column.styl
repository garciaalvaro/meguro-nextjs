/**
 * Column
 */

.container
	flex-grow 1
	flex-basis 100%
	height 100%

.content
	min-height 100%
	display grid
	grid-row-gap 2.5rem

.use_modal img
	cursor pointer

.scrollbar
	width 7px!important
	background none!important
	border-radius 0!important
	height 100%!important
	top 0!important

	> div
		background-color var(--scrollbar_color)!important
		border-radius 0!important

@keyframes appear

	0%
		opacity .8
		transform translateY(.1rem) translateZ(0)

	100%
		opacity 1
		transform translateZ(0)
