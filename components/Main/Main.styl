/**
 * Main
 */

.container
	display flex
	height 100%
	overflow hidden

main

	h1

		a
			font-style inherit

		a:before
			content normal

		+ h3
			margin-top -2em

	hr
		border none
		border-top .1rem solid

		&:first-child
			display none

	ul
	ol
		padding-left 1.5em

	img
		display block

	a
		position relative
		display inline-block
		font-style italic
		text-decoration none

		&
		&:visited
		&:focus
		&:hover
			color inherit

		&:before
			content ""
			position absolute
			bottom .2em
			left 0
			width 100%
			height 4px
			background-color currentColor
			transition transform .15s var(--ease_deceleration)
			transform-origin bottom
			transform scaleY(.5) translateZ(0)

		&:hover:before
			transform scaleY(1) translateZ(0)
