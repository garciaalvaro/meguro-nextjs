/**
 * Main
 */

.container
	display flex
	height 100%
	overflow auto
	flex-wrap wrap

	:global(#__next) &.is_home
		grid-column 1 / -1

main

	h1
		font-weight 400

		a
			font-style inherit

		a:before
			content normal

		+ h3
			font-size 1.3rem
			text-transform uppercase
			margin-top -2rem
			font-weight 400
			opacity .7
			font-family inherit

			+ hr
				content ""
				margin-top 12rem
				height 2px
				background currentColor
				display block

	hr
		border none
		border-top .1rem solid

	ul
	ol
		padding-left 1.5em

	img
		display block
		max-width 100%
		max-height 100%

	a
		position relative
		display inline-block
		font-style italic
		text-decoration none

		&
		&:visited
		&:focus
		&:hover
			color inherit

		&:before
			content ""
			position absolute
			bottom .2em
			left 0
			width 100%
			height 4px
			background-color currentColor
			transition transform .15s var(--ease_deceleration)
			transform-origin bottom
			transform scaleY(.5) translateZ(0)

		&:hover:before
			transform scaleY(1) translateZ(0)
