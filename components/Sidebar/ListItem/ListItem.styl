/**
 * ListItem
 */

.container
	background-color var(--sidebar_background_color)
	width 100%

	&:first-child
		position fixed
		top 0
		z-index 1

	&:hover

		.title
			opacity 1

		.subtitle
			opacity .6

			span
				transform translateZ(0)

.is_active

	.link
		opacity 1

	.title
		opacity 1

	.subtitle
		opacity .6

		span
			transform none

	.text_container
		background-color rgba(255,255,255,.05)
		border-top 1px solid rgba(0,0,0,.4)
		border-bottom 1px solid rgba(0,0,0,.4)

.title
	margin-top .7em
	opacity .6

.link
	display block
	font-style inherit
	width 100%
	line-height 1.7

	&:before
		content normal

.image_container
	position relative
	width 100%
	height 0
	padding-bottom 100%

	> div
		position absolute
		width 100%
		height 100%

.text_container
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	object-fit cover

.title
	margin-top 0
	font-size 1em
	flex-shrink 0
	text-overflow ellipsis
	overflow hidden
	transition opacity .3s .05s var(--ease_deceleration)

.subtitle
	font-weight normal
	font-size .95em
	text-overflow ellipsis
	overflow hidden
	opacity 0
	transition opacity .3s .05s var(--ease_deceleration)

	&:before
		content '|'
		padding 0 .6em 0 .7em
		line-height 0

	span
		display inline-block
		transform translateX(-1rem)
		transition transform .3s .05s var(--ease_deceleration)
