.container
	width 100%
	background-color var(--sidebar_background_color)

	&:first-child
		position fixed
		top 0
		z-index 1

		+ .container
			margin-top 9rem

	&:hover
		.title
			opacity 1

		.subtitle
			opacity .6

			span
				transform translateZ(0)

.is_active
	.link
		opacity 1

	.title
		opacity 1

	.subtitle
		opacity .6

		span
			transform none

	.text_container
		border-top 1px solid rgba(0, 0, 0, .4)
		border-bottom 1px solid rgba(0, 0, 0, .4)
		background-color rgba(255, 255, 255, .05)

.title
	margin-top .7em
	opacity .6

.link
	display block
	width 100%
	font-style inherit
	line-height 1.7

	&:before
		content normal

.image_container
	position relative
	padding-bottom 100%
	width 100%
	height 0

	> div
		position absolute
		width 100%
		height 100%

.text_container
	overflow hidden
	text-overflow ellipsis
	white-space nowrap

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	object-fit cover

.title
	flex-shrink 0
	overflow hidden
	margin-top 0
	text-overflow ellipsis
	font-size 1em
	transition opacity .3s .05s var(--ease_deceleration)

.subtitle
	overflow hidden
	text-overflow ellipsis
	font-weight normal
	font-size .95em
	opacity 0
	transition opacity .3s .05s var(--ease_deceleration)

	&:before
		padding 0 .6em 0 .7em
		content "|"
		line-height 0

	span
		display inline-block
		transition transform .3s .05s var(--ease_deceleration)
		transform translateX(-1rem)
