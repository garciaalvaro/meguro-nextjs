/**
 * ListItem
 */

.container
	z-index 1

	&:first-child
		position sticky
		top 0
		z-index 2

	&:hover

		.subtitle
			opacity 1
			transition-delay .1s

			span
				transform none
				transition-delay .1s

.is_active

	.link
		opacity 1

	.title
		color var(--color_inv)

	.text_container
		background-color rgba(255,255,255,.05)
		border-top 1px solid rgba(0,0,0,.4)
		border-bottom 1px solid rgba(0,0,0,.4)

	.subtitle
		opacity 1

		span
			transform none

.title
	margin-top .7em

.subtitle
	font-weight normal

.link
	display block
	font-style inherit
	width 100%
	line-height 1.7

	&:before
		content normal

.image_container
	position relative
	width 100%
	height 0
	padding-bottom 100%

	> div
		position absolute
		width 100%
		height 100%

	img
		object-fit cover
		height 100%

.text_container
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	object-fit cover


.title
	margin-top 0
	font-size 1em
	flex-shrink 0
	text-overflow ellipsis
	overflow hidden

.subtitle
	text-overflow ellipsis
	overflow hidden
	opacity 0
	transition opacity .3s var(--ease_standard)

	&:before
		content '|'
		padding 0 1em
		line-height 0

	span
		transform translateX(-1rem)
		transition transform .3s var(--ease_standard)
