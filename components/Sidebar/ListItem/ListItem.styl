.container
	width 100%
	background-color var(--sidebar_background_color)

	&:first-child
		position fixed
		top 0
		z-index 1

		+ .container
			margin-top 9rem

	&:hover
		.title
			opacity 1

.is_active
	.link
	.title
		opacity 1

	.text_container
		border-top 1px solid rgba(0, 0, 0, .4)
		border-bottom 1px solid rgba(0, 0, 0, .4)
		background-color rgba(255, 255, 255, .05)

.link
	display block
	width 100%
	font-style inherit
	line-height 1.7

	&:before
		content normal

.image_container
	position relative
	padding-bottom 100%
	width 100%
	height 0

	> div
		position absolute
		width 100%
		height 100%

.text_container
	overflow hidden
	text-overflow ellipsis
	white-space nowrap

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	object-fit cover

.title
	overflow hidden
	margin-top .7em
	margin-top 0
	text-overflow ellipsis
	font-size 1em
	opacity .6
	transition opacity .3s .05s var(--ease_deceleration)
