/**
 * List
 */

.container
	list-style none
	overflow auto
	height 100vh
	color var(--color_inv_05)

	body ul&
		padding-left 0

.title
	margin-top .7em

.subtitle
	font-weight normal

.link
	display block
	font-style inherit
	width 100%
	line-height 1.7

	&:before
		content normal

.image_container
	position relative
	width 100%
	height 0
	padding-bottom 100%

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	object-fit cover


.title
	margin-top 0
	font-size 1.3rem
	flex-shrink 0

.subtitle
	display flex
	align-items center
	opacity 0
	transition opacity .3s var(--ease_standard)

	&:before
		content '|'
		padding 0 1em
		line-height 0

	span
		transform translateX(-1rem)
		transition transform .3s var(--ease_standard)

.item
	z-index 1

	&:first-child
		position sticky
		top 0
		z-index 2

	&:hover

		.subtitle
			opacity 1
			transition-delay .1s

			span
				transform none
				transition-delay .1s

.is_active

	.title
		color var(--color_inv)

	.text_container
		background-color rgba(255,255,255,.05)
		border-top 1px solid rgba(0,0,0,.4)
		border-bottom 1px solid rgba(0,0,0,.4)

	.subtitle
		opacity 1

		span
			transform none
