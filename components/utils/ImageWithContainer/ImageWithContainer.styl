.container
	position relative
	height 0
	background-color transparent
	transition background-color .3s var(--ease_standard)

	&.is_loading
		background-color rgba(0, 0, 0, .1)

.image
	position absolute
	top 0
	left 0
	display block
	width 100%
	height 100%
	transition opacity .3s var(--ease_standard)
	object-fit contain

	.is_loading &
		opacity 0
