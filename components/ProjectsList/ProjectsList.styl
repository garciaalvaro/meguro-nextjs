/**
 * ProjectsList
 */

.container
	list-style none
	display grid
	grid-row-gap 5rem
	grid-column-gap 5rem
	grid-template-columns repeat(auto-fit, minmax(20rem, auto))

	body ul&
		padding-left 0

.title
	margin-top .7em

.subtitle
	font-weight normal

.link
	display block
	font-style inherit
	width 100%
	line-height 1.7

	&:before
		content normal

.image_container
	position relative
	width 100%
	height 0
	padding-bottom 100%

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	object-fit cover

.subtitle
	font-weight normal
	color var(--color_07)
