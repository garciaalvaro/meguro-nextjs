/**
 * Layout - meguro_2
 */

$breakpoint = 800px - 1px

.column_1_container
	flex 1

.column_1_content
	padding 8rem
	grid-row-gap 8rem
	max-width 60rem
	margin 0 auto

	@media screen and (max-width: $breakpoint)
		padding 6rem
		grid-row-gap 6rem

.column_2_container
	flex 1

.column_2_content
	max-width 60rem
	margin 0 auto

.column_2_description
.column_2_title
	padding 5rem
	display grid
	grid-row-gap 2.5rem

	@media screen and (max-width: $breakpoint)
		padding 6rem

@media screen and (max-width: $breakpoint)

	.column_1_container
	.column_2_container
		overflow visible
		height auto

.column_2_title
	flex-basis 100%
	padding-top 15rem
	padding-bottom 0

	@media screen and (max-width: $breakpoint)
		padding-bottom 6rem
		order -1

.column_2_description
	flex-basis 100%
	padding-top 0

	@media screen and (max-width: $breakpoint)
		padding-top 6rem
