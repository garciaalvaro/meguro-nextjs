$column_width = 40rem
// column_width + column_width + sidebar_width
$breakpoint = 800px - 1px

.column_1_container
	flex 1

.column_1_content
	margin 0 auto
	padding 8rem
	max-width 60rem
	grid-row-gap 8rem

	@media screen and (max-width $breakpoint)
		padding 6rem
		grid-row-gap 6rem

.column_2_container
	flex 1

.column_2_content
	margin 0 auto
	max-width 60rem

.column_2_description
.column_2_title
	display grid
	padding 5rem
	grid-row-gap 2.5rem

	@media screen and (max-width $breakpoint)
		padding 6rem

@media screen and (max-width $breakpoint)
	.column_1_container
	.column_2_container
		flex-basis 100%
		overflow visible
		height auto

.column_2_title
	flex-basis 100%
	padding-top 15rem
	padding-bottom 0

	@media screen and (max-width $breakpoint)
		order -1
		padding-bottom 6rem

.column_2_description
	flex-basis 100%
	padding-top 0

	@media screen and (max-width $breakpoint)
		padding-top 6rem
