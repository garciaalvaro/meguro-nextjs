/**
 * Layout - meguro_3
 */

$column_1_width = 40rem
$column_2_width = 20rem
$column_3_width = 20rem

// column_1_width + column_2_width + column_3_width + sidebar_width
$breakpoint = (400 + 200 + 200 + 90 - 1)px

.column_1_container
	flex-basis $column_1_width
	flex-grow 1
	flex-shrink 0
	background-color #4f5356

.column_1_content
	padding 5rem
	padding-top 15rem
	color rgba(255,255,255,0.9)
	grid-row-gap 2.5rem
	max-width 60rem
	margin 0 auto

	@media screen and (max-width: $breakpoint)
		padding 4rem
		padding-top 14rem
		padding-bottom 8rem

.column_2_container
	flex-basis $column_2_width
	flex-grow 4
	flex-shrink 11
	background-color #e5ebec

.column_2_content
	padding 4rem
	grid-row-gap 4rem
	max-width 60rem
	margin 0 auto

.column_3_container
	flex-basis $column_3_width
	flex-grow 4
	flex-shrink 11
	background-color #e5ebec

.column_3_content
	padding 4rem
	grid-row-gap 4rem
	max-width 60rem
	margin 0 auto

	@media screen and (max-width: $breakpoint)
		padding-top 0

@media screen and (max-width: $breakpoint)

	.column_1_container
	.column_2_container
	.column_3_container
		overflow visible
		height auto
		flex-basis 100%
