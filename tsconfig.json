{
	"compilerOptions": {
		"target": "esnext",
		"noEmit": true,
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["components/*"],
			"@context": ["context"],
			"@layouts": ["layouts"],
			"@hooks": ["hooks"],
			"@hooks/*": ["hooks/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
